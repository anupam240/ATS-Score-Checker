{
  "manifest_version": 3,
  "name": "ATS Checker",
  "description": "Paste a job description and upload a PDF resume. Extracts skills and calculates a match percentage. Stores data locally.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "ATS Checker"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [],
  "web_accessible_resources": [
    {
      "resources": [
        "libs/pdfjs/pdf.min.js",
        "libs/pdfjs/pdf.worker.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; worker-src 'self'; connect-src 'self' blob:;"
  }
}